<PageTitle>Nuzlocke & Soul Link Tracker</PageTitle>
@inject NavigationManager Navigation

<div class="row mt-xxl-4">
    <div class="col-3"></div>
    <div class="col-6 h3">
        Please
        <a class="pkmn-link-blue" href="" @onclick="NavigateToLogin">Log in</a>
        or
        <a class="pkmn-link-red m-0" href="" @onclick="NavigateToRegister">Register</a>
        in order to view and join runs!
    </div>
    <div class="col-3"></div>
</div>

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("login");
    }

    private void NavigateToRegister()
    {
        Navigation.NavigateTo("register");
    }
}
